@inherits BindableBase

<div class="form-group" style="background: #FAE5D3;">
    <p><b>Properties: </b></p>
    <p>Value: @Descriptor.Value</p>
    <p>CharacteristicUuid: @Descriptor.CharacteristicUuid</p>
    <p>DeviceUuid: @Descriptor.DeviceUuid</p>
    <p>ServiceUuid: @Descriptor.ServiceUuid</p>
    <p>Uuid: @Descriptor.Uuid</p>
    <br/>

    <p><b>Methods: </b></p>
    <p>Value: @ValueRead</p>
    <button type="button" class="btn btn-outline-primary" disabled="@IsBusy" onclick="@ReadValue">ReadValue</button>
    <br />
    <label>
        Write byte array:
        <InputTextToByteArrayComponent @bind-Value="ValueWrite" />
    </label>
    <br />
    <button type="button" class="btn btn-outline-primary" disabled="@IsBusy" onclick="@WriteValue">WriteValueWithResponse</button>
    <br />

</div>